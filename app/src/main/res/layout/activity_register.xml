<?xml version="1.0" encoding="utf-8"?>
<layout>
    <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">

        <com.weimore.widget.Toolbar
            android:id="@+id/toolbar"
            app:toolbar_background="@color/colorTheme"
            app:toolbar_title="注册"
            android:layout_width="match_parent"
            android:layout_height="45dp"/>

        <EditText
            android:id="@+id/et_phone"
            android:hint="请输入手机号"
            android:inputType="number"
            android:singleLine="true"
            android:maxLength="11"
            android:paddingLeft="10dp"
            android:drawableLeft="@drawable/ico_username"
            android:drawablePadding="13dp"
            android:layout_marginLeft="33dp"
            android:layout_marginRight="33dp"
            app:layout_constraintTop_toBottomOf="@id/toolbar"
            android:layout_marginTop="30dp"
            android:layout_width="0dp"
            android:textSize="@dimen/T_14"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:background="@drawable/bg_theme_edittext"
            android:layout_height="40dp" />

        <EditText
            android:id="@+id/et_username"
            android:hint="请输入昵称"
            android:paddingLeft="10dp"
            android:singleLine="true"
            android:maxLength="10"
            android:drawableLeft="@drawable/ico_username"
            android:drawablePadding="13dp"
            android:layout_marginLeft="33dp"
            android:layout_marginRight="33dp"
            app:layout_constraintTop_toBottomOf="@id/et_phone"
            android:layout_marginTop="15dp"
            android:layout_width="0dp"
            android:textSize="@dimen/T_14"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:background="@drawable/bg_theme_edittext"
            android:layout_height="40dp" />


        <EditText
            android:id="@+id/et_password"
            android:hint="请输入密码"
            android:paddingLeft="10dp"
            android:singleLine="true"
            android:maxLength="15"
            android:inputType="textPassword"
            android:drawableLeft="@drawable/ico_password"
            android:drawablePadding="13dp"
            android:layout_marginLeft="33dp"
            android:layout_marginRight="33dp"
            app:layout_constraintTop_toBottomOf="@id/et_username"
            android:layout_marginTop="15dp"
            android:layout_width="0dp"
            android:textSize="@dimen/T_14"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:background="@drawable/bg_theme_edittext"
            android:layout_height="40dp" />

        <EditText
            android:id="@+id/et_password_confirm"
            android:hint="确认密码"
            android:paddingLeft="10dp"
            android:singleLine="true"
            android:inputType="textPassword"
            android:maxLength="15"
            android:drawableLeft="@drawable/ico_password"
            android:drawablePadding="13dp"
            android:layout_marginLeft="33dp"
            android:layout_marginRight="33dp"
            app:layout_constraintTop_toBottomOf="@id/et_password"
            android:layout_marginTop="15dp"
            android:layout_width="0dp"
            android:textSize="@dimen/T_14"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:background="@drawable/bg_theme_edittext"
            android:layout_height="40dp" />

        <TextView
            android:id="@+id/tv_register"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:gravity="center"
            android:text="注册"
            android:textColor="@color/white"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            app:layout_constraintTop_toBottomOf="@id/et_password_confirm"
            android:layout_marginTop="35dp"
            android:background="@drawable/bg_theme_radius10"/>


    </android.support.constraint.ConstraintLayout>
</layout>

