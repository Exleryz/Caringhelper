<?xml version="1.0" encoding="utf-8"?>
<layout>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto">

        <com.weimore.widget.Toolbar
            android:id="@+id/toolbar"
            app:toolbar_background="@color/colorTheme"
            app:toolbar_title="设置"
            android:layout_width="match_parent"
            android:layout_height="45dp"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_marginTop="20dp"
            android:background="@color/white"
            android:layout_height="50dp">

            <TextView
                android:gravity="center_vertical"
                android:text="来电自动发送短信"
                android:textColor="@color/black"
                android:layout_marginLeft="20dp"
                android:textSize="@dimen/T_14"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />

            <Switch
                android:id="@+id/sw_auto_sms"
                android:layout_width="wrap_content"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:layout_height="match_parent" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#55000000"/>

        <TextView
            android:id="@+id/tv_change_password"
            android:text="修改密码"
            android:textColor="@color/white"
            android:layout_marginLeft="30dp"
            android:gravity="center"
            android:layout_marginTop="80dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/bg_theme_radius10"
            android:layout_width="match_parent"
            android:layout_height="50dp" />

        <TextView
            android:id="@+id/tv_exit"
            android:text="退出登录"
            android:textColor="@color/white"
            android:layout_marginLeft="30dp"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/bg_red_radius10"
            android:layout_width="match_parent"
            android:layout_height="50dp" />

    </LinearLayout>
</layout>
