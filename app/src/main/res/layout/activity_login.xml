<?xml version="1.0" encoding="utf-8"?>
<layout>
    <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">

        <com.weimore.widget.Toolbar
            android:id="@+id/toolbar"
            app:toolbar_background="@color/colorTheme"
            app:toolbar_title="登录"
            android:layout_width="match_parent"
            android:layout_height="45dp"/>

        <EditText
            android:id="@+id/et_phone"
            android:hint="请输入手机号"
            android:paddingLeft="10dp"
            android:drawableLeft="@drawable/ico_username"
            android:drawablePadding="13dp"
            android:singleLine="true"
            android:maxLength="11"
            android:layout_marginLeft="33dp"
            android:layout_marginRight="33dp"
            app:layout_constraintTop_toBottomOf="@id/toolbar"
            android:layout_marginTop="100dp"
            android:layout_width="0dp"
            android:textSize="@dimen/T_14"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:background="@drawable/bg_theme_edittext"
            android:layout_height="44dp" />

        <ImageView
            android:id="@+id/im_phone_delete"
            android:visibility="gone"
            android:src="@drawable/ic_delete"
            app:layout_constraintTop_toTopOf="@id/et_phone"
            app:layout_constraintBottom_toBottomOf="@id/et_phone"
            app:layout_constraintRight_toRightOf="@id/et_phone"
            android:layout_marginRight="10dp"
            android:padding="2dp"
            android:tint="@color/gray"
            android:layout_width="20dp"
            android:layout_height="20dp" />

        <EditText
            android:id="@+id/et_password"
            android:singleLine="true"
            android:maxLength="15"
            android:inputType="textPassword"
            android:hint="请输入密码"
            android:paddingLeft="10dp"
            android:drawableLeft="@drawable/ico_password"
            android:drawablePadding="13dp"
            android:layout_marginLeft="33dp"
            android:layout_marginRight="33dp"
            android:textSize="@dimen/T_14"
            app:layout_constraintTop_toBottomOf="@id/et_phone"
            android:layout_marginTop="25dp"
            android:layout_width="0dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:background="@drawable/bg_theme_edittext"
            android:layout_height="44dp" />

        <ImageView
            android:visibility="gone"
            android:id="@+id/im_password_delete"
            android:src="@drawable/ic_delete"
            app:layout_constraintTop_toTopOf="@id/et_password"
            app:layout_constraintBottom_toBottomOf="@id/et_password"
            app:layout_constraintRight_toRightOf="@id/et_password"
            android:layout_marginRight="10dp"
            android:padding="2dp"
            android:tint="@color/gray"
            android:layout_width="20dp"
            android:layout_height="20dp" />

        <TextView
            android:id="@+id/tv_login"
            android:gravity="center"
            android:textColor="@color/white"
            android:text="登录"
            android:layout_marginLeft="30dp"
            android:textSize="@dimen/T_14"
            android:layout_marginRight="15dp"
            app:layout_constraintTop_toBottomOf="@id/et_password"
            android:layout_marginTop="30dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/tv_register"
            android:background="@drawable/bg_theme_radius10"
            android:layout_width="0dp"
            android:layout_height="45dp" />

        <TextView
            android:id="@+id/tv_register"
            android:gravity="center"
            android:textColor="@color/white"
            android:text="注册"
            android:textSize="@dimen/T_14"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="30dp"
            app:layout_constraintLeft_toRightOf="@id/tv_login"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/et_password"
            android:layout_marginTop="30dp"
            android:background="@drawable/bg_theme_radius10"
            android:layout_width="0dp"
            android:layout_height="45dp" />


    </android.support.constraint.ConstraintLayout>
</layout>
